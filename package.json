{
  "name": "substack-publisher",
  "version": "1.0.7",
  "description": "Publish your notes directly to Substack as drafts or published posts.",
  "main": "main.js",
  "type": "module",
  "scripts": {
    "dev": "node esbuild.config.mjs",
    "build": "tsc -noEmit -skipLibCheck && node esbuild.config.mjs production",
    "version": "node version-bump.mjs && git add manifest.json versions.json",
    "lint": "eslint src --ext .ts,.js",
    "lint:fix": "eslint src --ext .ts,.js --fix",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "clean": "rm -rf build dist *.tgz",
    "prepare": "npm run build"
  },
  "keywords": [
    "obsidian",
    "obsidian-plugin",
    "substack",
    "newsletter",
    "publishing",
    "markdown"
  ],
  "author": "Romain Peyrichou",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@eslint/json": "^0.14.0",
    "@types/node": "^24.0.3",
    "@typescript-eslint/eslint-plugin": "^8.34.1",
    "@typescript-eslint/parser": "^8.34.1",
    "@vitest/coverage-v8": "^3.2.4",
    "builtin-modules": "^3.3.0",
    "esbuild": "^0.25.5",
    "eslint": "^9.29.0",
    "eslint-plugin-obsidianmd": "^0.1.9",
    "jsdom": "^26.0.0",
    "obsidian": "^1.8.7",
    "prettier": "^3.7.0",
    "type-coverage": "^2.29.7",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.48.0",
    "vitest": "^3.2.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/roomi-fields/obsidian-substack"
  },
  "bugs": {
    "url": "https://github.com/roomi-fields/obsidian-substack/issues"
  },
  "homepage": "https://github.com/roomi-fields/obsidian-substack#readme"
}
